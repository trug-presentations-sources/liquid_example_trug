= form_for(@template) do |f|
  - if @template.errors.any?
    #error_explanation
      %h2
        = pluralize(@template.errors.count, "error")
        prohibited this template from being saved:
      %ul
        - @template.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name, style: 'width: 100%;'
  .field
    = f.label :content
    %br/
    = f.text_area :content, style: 'width: 100%;', rows: 20
  .actions
    = f.submit
